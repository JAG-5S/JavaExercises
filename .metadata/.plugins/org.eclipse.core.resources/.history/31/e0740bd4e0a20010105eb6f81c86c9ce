package calcularNotaExamen;

import java.util.Scanner;
public class Calcule {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		final int PREGUNTA_TOTAL = 20;
		
		int num1;
		int num2;
		
		System.out.println("Tienes un examen ( Cuantas preguntas acertataste y cuantas no? no pueden ser mas de 20 preguntas.");
		System.out.print("Numero de preguntas acertadadas: ");
		num1 = teclado.nextInt();
		System.out.print("Numero de preguntas Falladas: ");
		num2 = teclado.nextInt();
		
		int numTotal = num1 + num2;
		
		double nota = num1 - (num2 * 0.5);
		
		double notaFinal = (nota/20) *10 ;
		
		
		if (notaFinal >= 0 && notaFinal <= 10 && numTotal >= 0 && numTotal <= 20) {
			System.out.print("Tu Nota es: " + notaFinal);
		}
		
		else {
			System.out.print("Datos erroneos");
		}
		
		

	}

}
