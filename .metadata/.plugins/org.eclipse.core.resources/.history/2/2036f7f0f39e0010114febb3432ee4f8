/*
 * Autor: 
 * Descripcion: Realiza un Programa que solicite Nombre, Apellidos, Fecha de nacimiento y Salario Bruto. Posteiormente realizar un programa que calcule el salario Neto.
 * Fecha: 01/10/25
 */



package ejercicio1;

import java.util.Scanner;

public class Ejercicio1 {

	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		String nombre;
		String apellidos;
		String fechaDeNacimiento;
		double salarioBruto;
		double anyosTrabajadosEnLaEmpresa;
		
		System.out.print("Escribe Tu Nombre: ");
		nombre = teclado.nextLine();
		System.out.print("Escribe Tus Apellidos: ");
		apellidos = teclado.nextLine();
		System.out.print("Escribe Tu Fecha de Nacimiento: ");
		fechaDeNacimiento = teclado.nextLine();
		System.out.print("Escribe Tu Salario Bruto: ");
		salarioBruto = teclado.nextDouble();
		System.out.print("Escribe Tus Años Trabajados en la Empresa");
		anyosTrabajadosEnLaEmpresa = teclado.nextDouble();
		
		double salarioNeto = salarioBruto - (salarioBruto/100*15);
		
		double incrementoPorcentual = anyosTrabajadosEnLaEmpresa * 2;

		double salarioTotal = salarioBruto + (salarioBruto/100*incrementoPorcentual) ;
		
		double salarioTotalNeto = salarioTotal - (salarioTotal/100*15);
		
		System.out.println("Estimad@ " + nombre + ", su salario bruto es " + salarioBruto + ", teniendo en cuenta un IRPF del 15%, su salario neto es " + salarioNeto );
		
		System.out.println("Debido a sus" + anyosTrabajadosEnLaEmpresa + " años trabajandos en la empresa su salario se incrementara un 2% por cada año. El aumento es del" + incrementoPorcentual + "& y el salario total Bruto es: " + salarioTotal + " y el Salario Total Neto es: " + salarioTotalNeto  );
		
		

	}

}
